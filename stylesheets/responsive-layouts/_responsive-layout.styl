screensize = 1100px
midsize = 830px
cellsize = 566px

// TOP IMAGE

.subheader
    +below(screensize)
        font-size 3rem
    +below(cellsize)
        font-size 2rem

.col-img
    &.one
        h1
            +below(screensize)
                font-size 1rem

.nav-text
   +below(screensize)
      display none

// STUDENT ROW ONE

.col-student.one
    +below(screensize)
        max-height 9000px
        .student-img.one, .student-article.one
            display none
        .student-floating
            .news
                display none
        

.col-img.two
    +below(screensize)
        display none

.student-article.three
    +below(screensize)
        position static

.student-article.two
    +below(screensize)
        display none

.student-img.one, .student-article.one, .col-img.two, .student-article.two
    +below(screensize)
        display none

.student-floating
    +below(screensize)
        margin 0
        max-width 100%

.student-img.three
    +below(screensize)
        max-width 100%

.float-div
    &.student-quote
        +below(midsize)
            padding 0

.student-quote
    h6
        +below(midsize)
            font-size 1rem
    i
        +below(screensize)
            margin 4% 0 0 6%
        
.student-responsive-container
    +below(screensize)
        display flex

.student-img.two
    width 100%
    height 100%
        
.student-year-container
    h6, p
        +below(midsize)
            font-size .65rem

.button-container
    button
        +below(midsize)
            margin 10px 0 0 0
            width 3rem
            border-radius 10% 10% 10% 10%
    button::after
        +below(midsize)
            content ">"
            

.student-year-and-button-container
    +below(midsize)
        justify-content space-around
        padding 0

.bottom
    +below(cellsize)
        padding 1.5rem 5%
    h6
        +below(cellsize)
            font-size 1.25rem
    p 
        +below(cellsize)
            line-height 1

.col-student.two, .col-student.three
    +below(screensize)
        min-height 0px
        max-height 9999px

.float-div.news
    +below(1200px)
        display none        
        

.student-article.three
    +below(screensize)
        width 100%
        padding 1rem .5rem
        display flex
        justify-content space-around
        h3
            font-size 4.5rem

.student-article.three .student-nums, .student-article.three button, .student-article.four, .col-img.three, .events
    +below(screensize)
        display none

.undergrads
    +below(screensize)
        width 50%
        
.student-article.five p
    +below(cellsize)
        font-size 1.25rem
    
.student-img.four, .student-article.five
    +below(screensize)
        width 50%

.col-img.four
    +below(screensize)
        width: 100%;
        height: 60px;

.img-overlay
    +below(screensize)
        margin-top -3rem
        margin-right 1rem
.img-overlay p
    +below(screensize)
        font-size .5rem

.img-overlay button
    +below(screensize)
        font-size 1rem

.logo-social-footer-container
    +below(cellsize)
        justify-content space-between

.logo-img
    +below(466px)
        width 50%
        height 50spx

.social-footer p
    +below(cellsize)
        display none

.respond-clear
    +below(cellsize)
        display none

.footer-links, .footer-links-two
    +below(cellsize)
        line-height 1.50

.footer-links-two
    +below(cellsize)
        padding 0 1rem

.contact li 
    +below(cellsize)
        font-size .60rem
        
